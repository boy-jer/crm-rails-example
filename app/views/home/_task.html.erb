<li id="task_<%= task.id %>"> 
  <% if task.status == "open" %> 
    <%= check_box_tag "task_mark_#{task.id}", task.id, false, 
  		:onclick => remote_function(:url => { :action => "finish", :id => task },      
			:before => %($("#loader").show()), 
			:complete => %($("#loader").hide())) %>  
  <% end %> 
  <%= label_tag "task_mark_#{task.id}", task.title %> 
</li> 