<% form_for(@user) do |f| %>
  <%= f.error_messages %>
  
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <% if @user.new_record?: %>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <% end %>
  <p>
    <%= f.label :kind %><br />
    <%= f.select :kind, User::OPTIONS_FOR_KIND %>
  </p>
  <p>
    <%= f.submit @user.new_record? ? "Create" : "Update" %>
  </p>
<% end %>
