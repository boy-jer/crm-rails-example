<% content_for :head do -%> 
	<%= auto_discovery_link_tag :rss, {:format => :rss } -%>
<% end -%> 

<% title "Listing tasks" -%>

<%= link_to image_tag('rss.jpg'), formatted_tasks_path(:format => :rss), {:style => 'float:right'} %>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Status</th>
    <th>Owner</th>
    <th>Priority</th>
    <th>Progress</th>
    <th>Started at</th>
    <th>Ended at</th>
    <th>Project</th>
  </tr>

<% for task in @tasks %>
  <tr>
    <td><%=h task.title %></td>
    <td><%=h task.description %></td>
    <td><%=h task.status %></td>
    <td><%=h task.owner.name %></td>
    <td><%=h task.priority %></td>
    <td><%=h task.progress %></td>
    <td><%=h task.started_at %></td>
    <td><%=h task.ended_at %></td>
    <td><%=h task.project.name %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>
