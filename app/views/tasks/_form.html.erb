<% form_for(@task) do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.select :status, Task::OPTIONS_FOR_STATUS %>
  </p>
  <p>
    <%= f.label :owner %><br />
    <%= f.select :owner_id, @owners, :prompt => "Select..." %>
  </p>
  <p>
    <%= f.label :priority %><br />
    <%= f.select :priority, Task::OPTIONS_FOR_PRIORITY %>
  </p>
  <p>
    <%= f.label :progress %><br />
    <%= f.text_field :progress %>
  </p>
  <p>
    <%= f.label :started_at %><br />
    <%= f.text_field :started_at %>
  </p>
  <p>
    <%= f.label :ended_at %><br />
    <%= f.text_field :ended_at %>
  </p>
  <p>
    <%= f.label :project %><br />
    <%= f.select :project_id, @projects, :prompt => "Select..." %>
  </p>
  <p>
    <%= f.submit @task.new_record? ? "Create" : "Update" %>
  </p>
<% end %>
